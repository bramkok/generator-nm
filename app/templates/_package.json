{
  "name": "<%= moduleName %>",
  "version": "0.0.0",
  "description": "<%= moduleDescription %>",
  "license": "MIT",
  "repository": "<%= githubUsername %>/<%= repoName %>",
  "author": {
    "name": "<%= name %>",
    "url": "<%= humanizedWebsite %>"
  },<% if (cli) { %>
  "bin": "cli.js",<% } %>
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "xo && <% if (nyc) { %>nyc <% } %>ava"
  },
  "files": [
    "index.js"<% if (cli) { %>,
    "cli.js"<% } %>
  ],
  "keywords": [<% if (cli) { %>
    "cli-app",
    "cli",<% } %>
    ""
  ],
  "dependencies": {<% if (cli) { %>
    "meow": "^3.7.0"
  <% } %>},
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "eslint": "^3.3.0",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^1.13.0",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "eslint-plugin-react": "^6.0.0",
    "ava": "^0.15.2",<% if (coveralls) { %>
    "coveralls": "^2.11.12",<% } %><% if (nyc) { %>
    "nyc": "^7.1.0",<% } %>
    "xo": "^0.16.0"
  },
  "xo": {
    "esnext": true,
    "space": true,
    "rules": {
      "babel/object-curly-spacing": 0,
      "babel/arrow-parens": 0,
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "curly": [
        "error",
        "multi-line"
      ],
      "no-implicit-coercion": [
        "error", {
          "boolean": false,
          "number": true,
          "string": true,
          "allow": []
        }
      ]
    }
  }<% if (coveralls) { %>,
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  }<% } %>
}
